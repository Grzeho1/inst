<Window x:Class="inst.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" Width="300" Height="150" Background="White" Topmost="True">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="StatusText" FontSize="16" FontWeight="Bold" Foreground="Black" Text="Starting..." 
                       HorizontalAlignment="Center" Margin="0,10,0,10"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
