<Window x:Class="inst.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="284" Width="350" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="*Username:" Grid.Row="3" Margin="5,81,155,-67"/>
        <TextBox x:Name="UsernameTextbox" Grid.Row="3" Margin="160,81,10,-63"/>

        <Label Content="*Password:" Grid.Row="3" Margin="5,115,155,-101"/>
        <PasswordBox x:Name="PasswordTextbox" Grid.Row="3" Margin="160,115,10,-97"/>

        <!--<Button Content="Login" Grid.Row="3" Width="100" HorizontalAlignment="Center" 
                Margin="0,157,0,-137" Click="LoginButton_Click" x:Name="LoginButton" Style="{StaticResource MainButtonStyle}"  />-->
        <Label Content="Database name:" Grid.Row="3" Margin="5,50,155,-36"/>
        <Label Content="IP:" Grid.Row="3" Margin="5,19,155,-5"/>
        <TextBox x:Name="DatabaseTextbox" Grid.Row="3" Margin="160,52,10,-34"/>
        <TextBox x:Name="IpTextbox" Grid.Row="3" Margin="160,21,10,-3"/>
    </Grid>
</Window>
